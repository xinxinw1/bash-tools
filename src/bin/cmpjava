#!/bin/bash

# Usage: cmpjava <folder> <classname>

classdir="$1"
classname="$2"

err=

if [ -d "$classdir" ]; then
  echo Compiling \"$classdir\"
  echo -------------------------------------------------------------------------------
  
  if [ ! -z "$classname" ]; then
    classes="$classdir/${classname//[.]//}.java"
  else
    classes=("$classdir/"*.java)
  fi
  
  javac -Xlint:unchecked -cp "$classdir":General/:General/* "${classes[@]}"
    
  if [ $? -ne 0 ]; then
    err="true"
    echo
  fi
  
  if [ ! -z "$classname" ]; then
    if [ -z "$err" ]; then
      echo
      echo
      
      echo Running \"$classname\"
      echo -------------------------------------------------------------------------------
      java -cp "$classdir":General/:General/* "$classname"
    else
      err=
    fi
  fi
else
  echo Error: directory \"$classdir\" doesn\'t exist
fi

