#!/usr/bin/bash

if [ -f modification-dates ]; then
  read -p "File exists. Overwrite? [Y/n] " -r
  if ! [[ $REPLY =~ ^[Yy]$ ]]; then
    exit 1
  fi
fi

echo "$ date '+%c'" > modification-dates
echo "$(date '+%c')" >> modification-dates
echo "" >> modification-dates
echo "$ ls -lAR --time-style='+%c'" >> modification-dates
echo "$(ls -lAR --time-style='+%c')" >> modification-dates
